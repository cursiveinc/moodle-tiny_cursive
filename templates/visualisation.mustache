<div class="tiny_cursive_scatter container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h3 class="fw-bold mb-0">{{fullname}} Performance Analysis</h3>
    <div class="">
          <div class="expander-container">
          <input type="checkbox" id="toggle" />
          <label tabindex="0" class="btn toggle-btn mb-0 ml-1 cursive-btn" for="toggle"><img class="mr-2" width="22" height="22" src="https://img.icons8.com/forma-light/24/filter.png" alt="filter"/>Filters</label>
          <div class="content">
            {{#filter}}
             <a class="btn {{state}}" href="{{link}}">{{name}}</a>
            {{/filter}}
          </div>
        </div>
        <button class="btn ms-2 cursive-btn"><img class="mr-2" width="22" height="22" src="https://img.icons8.com/sf-regular-filled/48/downloading-updates.png" alt="downloading-updates"/>Export</button>
    </div>
  </div>
<div class="justify-content-between align-items-center my-3 {{#multiple}}border p-3 rounded{{/multiple}}">
  {{#multiple}}
    <a class="btn {{state}}" href="{{link}}">{{name}}</a>
  {{/multiple}}
</div>
  <div class="row">
    <!-- Chart Area -->
    <div class="col-lg-9 mb-3">
      <div class="border rounded p-3 position-relative" >
        <!-- Placeholder for chart -->
        <div class="text-muted d-flex justify-content-center align-items-center h-100">
        <canvas id="effortScatterChart"></canvas>
        </div>

      </div>

    </div>

    <div class="col-lg-3">
      <div class="border-start ps-3">
        <div class="d-flex align-items-center mb-2 text-warning fw-semibold">
          <i class="bi bi-exclamation-circle me-1"></i> Needs Attention
        </div>

        <div class="bg-warning-subtle border border-warning-subtle rounded p-2 mb-2">
          <strong>Noah Wilson</strong><br>
          Effort: 45%<br>
          Time: 12:30
        </div>

        <div class="bg-warning-subtle border border-warning-subtle rounded p-2 mb-2">
          <strong>Isabella Garcia</strong><br>
          Effort: 35%<br>
          Time: 10:00
        </div>

        <div class="bg-warning-subtle border border-warning-subtle rounded p-2 mb-2">
          <strong>Mia Thomas</strong><br>
          Effort: 48%<br>
          Time: 14:10
        </div>

        <div class="bg-warning-subtle border border-warning-subtle rounded p-2 mb-2">
          <strong>Charlotte Lee</strong><br>
          Effort: 32%<br>
          Time: 9:10
        </div>
      </div>
    </div>
  </div>
</div>

