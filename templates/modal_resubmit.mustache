{{!
    @template tiny_cursive/modal_resubmit

    Modal template for the resubmit dialog in the Cursive TinyMCE plugin.
    This template displays a toast notification with a resubmit button an

    Example context (json):
    {
    }
}}
<div class="tiny_cursive-toast-body" id="cursive-toast-body">
    <span id="ToastTextContent">{{#str}}resubmit, tiny_cursive {{/str}} </span>
    <a href="#" id="cursive-resubmit" class="d-block btn btn-sm mt-2 border rounded">
        {{#pix}}a/refresh, core{{/pix}} {{#str}}resubmitbtn, tiny_cursive{{/str}} </a>
    <div class="toast-overlay" id="toastOverlay">{{#pix}}i/loading, core{{/pix}}</div>
</div>